---
import OtterbladeGame from '../game/OtterbladeGame';
import '../styles.css';

const title = 'Otterblade Odyssey';
const description =
	'A 2.5D Willowmere Hearthhold adventure built with Astro + Solid.js, powered by Matter.js and YUKA.';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main id="root">
			<OtterbladeGame client:load />
		</main>
	</body>
</html>
