// .devcontainer/devcontainer.json
{
  "name": "Astro + SolidJS (Node 24 LTS, pnpm, Biome, Playwright, matter-js)",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-24-bookworm",

  "forwardPorts": [4321, 3000, 9229],

  "postCreateCommand": "corepack enable && corepack prepare pnpm@latest --activate && pnpm install",
  "postStartCommand": "pnpm playwright install --with-deps",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports.biome": "explicit",
          "quickfix.biome": "explicit"
        }
      },
      "extensions": [
        "astro-build.astro-vscode",
        "solidjs.solid",
        "biomejs.biome",
        "ms-playwright.playwright",
        "bradlc.vscode-tailwindcss",
        "github.copilot"
      ]
    }
  },

  "mounts": [
    "source=${localWorkspaceFolderBasename}-pnpm-store,target=/home/node/.local/share/pnpm/store,type=volume",
    "source=${localWorkspaceFolderBasename}-node_modules,target=/workspace/node_modules,type=volume"
  ]
}
