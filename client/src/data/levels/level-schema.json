{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Level Definition",
  "description": "Schema for Otterblade Odyssey level definition files",
  "type": "object",
  "required": ["id", "chapterId", "name", "bounds", "spawn", "exit", "platforms", "checkpoints"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9,
      "description": "Unique level identifier matching chapter ID"
    },
    "chapterId": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9,
      "description": "Associated chapter ID"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Display name for the level"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the level's narrative purpose"
    },
    "bounds": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "integer", "minimum": 800 },
        "height": { "type": "integer", "minimum": 400 }
      }
    },
    "spawn": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "exit": {
      "type": "object",
      "required": ["x", "y", "width", "height"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "width": { "type": "number", "minimum": 1 },
        "height": { "type": "number", "minimum": 1 },
        "targetChapter": { "type": ["integer", "null"] }
      }
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "x", "y", "width", "height", "type"],
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number", "minimum": 1 },
          "height": { "type": "number", "minimum": 1 },
          "type": {
            "type": "string",
            "enum": ["solid", "passthrough", "crumbling", "moving"]
          },
          "material": {
            "type": "string",
            "enum": ["stone", "wood", "grass", "moss", "ice", "iron", "soil", "dirt"]
          },
          "crumbleDelay": { "type": "integer", "minimum": 0 },
          "movementPath": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "x": { "type": "number" },
                "y": { "type": "number" }
              }
            }
          },
          "movementSpeed": { "type": "number", "minimum": 0 }
        }
      }
    },
    "checkpoints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "x", "y"],
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "isStart": { "type": "boolean" }
        }
      }
    },
    "enemies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "x", "y"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["skirmisher", "shielded", "ranged", "flyer", "elite"]
          },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "patrolPath": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "x": { "type": "number" },
                "y": { "type": "number" }
              }
            }
          },
          "spawnTrigger": { "type": "string" }
        }
      }
    },
    "boss": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "x": { "type": "number" },
        "y": { "type": "number" },
        "health": { "type": "integer", "minimum": 1 },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "healthThreshold": { "type": "number", "minimum": 0, "maximum": 1 },
              "patterns": { "type": "array", "items": { "type": "string" } },
              "speed": { "type": "number" },
              "dialogue": { "type": "string" }
            }
          }
        },
        "arena": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" },
            "width": { "type": "number" },
            "height": { "type": "number" }
          }
        }
      }
    },
    "allies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "species": { "type": "string" },
          "name": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "role": { "type": "string" },
          "state": { "type": "string" },
          "joinsTrigger": { "type": "string" }
        }
      }
    },
    "collectibles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "x", "y"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["shard", "health", "secret"]
          },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "value": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "triggers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "x", "y", "width", "height", "type"],
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number", "minimum": 1 },
          "height": { "type": "number", "minimum": 1 },
          "type": {
            "type": "string",
            "enum": ["cutscene", "tutorial", "dialogue", "event"]
          },
          "once": { "type": "boolean" },
          "data": { "type": "object" }
        }
      }
    },
    "hazards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "x", "y", "width", "height", "type"],
        "properties": {
          "id": { "type": "string" },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "width": { "type": "number" },
          "height": { "type": "number" },
          "type": {
            "type": "string",
            "enum": ["water", "spikes", "wind", "ice", "lightning", "void"]
          },
          "damage": { "type": "integer" },
          "interval": { "type": "integer" },
          "telegraph": { "type": "integer" },
          "direction": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          },
          "strength": { "type": "number" },
          "friction": { "type": "number" },
          "respawnPoint": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          }
        }
      }
    },
    "decorations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "x", "y", "layer", "sprite"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["building", "tree", "prop", "light", "effect"]
          },
          "x": { "type": "number" },
          "y": { "type": "number" },
          "layer": {
            "type": "string",
            "enum": ["far_background", "background", "foreground"]
          },
          "sprite": { "type": "string" },
          "animated": { "type": "boolean" },
          "interval": { "type": "integer" }
        }
      }
    },
    "ambiance": {
      "type": "object",
      "properties": {
        "music": { "type": "string" },
        "ambientSounds": {
          "type": "array",
          "items": { "type": "string" }
        },
        "lighting": { "type": "string" },
        "weather": { "type": "string" }
      }
    }
  }
}
