{
  "name": "otterblade-odyssey",
  "version": "1.0.0",
  "description": "Otterblade Odyssey: Zephyros Rising - A 2.5D woodland epic platformer",
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "scripts": {
    "dev": "pnpm --filter game dev",
    "dev:game": "pnpm --filter game dev",
    "build": "pnpm --filter game build",
    "build:game": "pnpm --filter game build",
    "preview": "pnpm --filter game preview",
    "preview:game": "pnpm --filter game preview",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --reporter=verbose",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:mcp": "PLAYWRIGHT_MCP=true playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:visual": "PLAYWRIGHT_MCP=true playwright test e2e/visual-regression.spec.ts",
    "test:e2e:update-snapshots": "PLAYWRIGHT_MCP=true playwright test --update-snapshots",
    "test:playthroughs": "playwright test e2e/automated-playthroughs",
    "test:playthroughs:mcp": "PLAYWRIGHT_MCP=true playwright test e2e/automated-playthroughs",
    "test:playthrough:chapter": "playwright test e2e/automated-playthroughs/chapter-",
    "test:journey": "playwright test e2e/automated-playthroughs/complete-game-journey.spec.ts",
    "test:journey:mcp": "PLAYWRIGHT_MCP=true playwright test e2e/automated-playthroughs/complete-game-journey.spec.ts --headed",
    "test:validate-all": "pnpm test:unit && pnpm test:journey",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "db:push": "drizzle-kit push",
    "cap:init": "cap init 'Otterblade Odyssey' com.otterblade.odyssey --web-dir dist",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:build:android": "pnpm build:game && cap sync android",
    "cap:run:android": "cap run android",
    "generate:sprites": "pnpm --filter @otterblade/dev-tools generate:sprites",
    "generate:enemy-sprites": "pnpm --filter @otterblade/dev-tools generate:enemy-sprites",
    "generate:cinematic": "pnpm --filter @otterblade/dev-tools generate:cinematic",
    "generate:scene": "pnpm --filter @otterblade/dev-tools generate:scene",
    "analyze:sprite": "pnpm --filter @otterblade/dev-tools analyze:sprite",
    "analyze:video": "pnpm --filter @otterblade/dev-tools analyze:video",
    "audit:cinematics": "pnpm --filter @otterblade/dev-tools audit:cinematics",
    "validate:assets": "pnpm --filter @otterblade/dev-tools validate:assets"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "connect-pg-simple": "^10.0.0",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "freesound-client": "^0.4.4",
    "howler": "^2.2.4",
    "input-otp": "^1.4.2",
    "matter-js": "^0.20.0",
    "memorystore": "^1.6.7",
    "nanoid": "^5.1.6",
    "nipplejs": "^0.10.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "solid-js": "^1.9.10",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tone": "^15.1.22",
    "tw-animate-css": "^1.4.0",
    "vaul": "^1.1.2",
    "vite-plugin-solid": "^2.11.10",
    "wouter": "^3.9.0",
    "ws": "^8.18.3",
    "yuka": "^0.7.8",
    "zod": "^3.25.76",
    "zod-validation-error": "^3.5.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@capacitor/cli": "^8.0.0",
    "@playwright/test": "^1.57.0",
    "@replit/vite-plugin-cartographer": "^0.4.4",
    "@replit/vite-plugin-dev-banner": "^0.1.1",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/howler": "^2.2.12",
    "@types/matter-js": "^0.20.2",
    "@types/node": "^20.19.27",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.18.1",
    "@types/yuka": "^0.7.4",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.25.12",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.6.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  },
  "optionalDependencies": {
    "bufferutil": "^4.1.0"
  }
}
