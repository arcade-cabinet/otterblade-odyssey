    "tsx": "^4.21.0",
    "typescript": "5.6.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  },
  "optionalDependencies": {
    "bufferutil": "^4.1.0"
  }
}
